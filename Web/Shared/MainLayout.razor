@inherits LayoutComponentBase
@using Test.Pages




<Header OnClickCallback="@AddLoginUser"></Header>


<CascadingValue Value="@loginUser">
    <div style="margin: 0 auto; max-width: 1240px;">@Body</div>
</CascadingValue>


<Footer></Footer>


@code
{
    public User loginUser { get; set; }

    private void AddLoginUser(User user)
    {
        loginUser = user;
    }
}
