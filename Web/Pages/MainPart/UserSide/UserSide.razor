@inject WebService webService

@if (User is not null)
{
    <div class="users-corner">
        <div class="box">
            <div class="card-user">
                <div class="title">
                    <span>ВАШ ПРОФИЛЬ</span>
                </div>
                <div class="back">
                    
                    <NavLink href="betHistory">
                        <span class="title-img" style ="color: white">ПРОФИЛЬ</span>
                        <img class="icon-user" src=@User.Avatar />
                    </NavLink>
                    
                </div>
                <div class="info-for-user">
                    <button class="nav"></button>
                    <div class="user-name">
                        @if (User.Name is null && User.Surname is null)
                        {
                            <span>Расскажите о себе</span>
                        }
                        else
                        {
                            <span>@User.Name @User.Surname</span>
                        }
                    </div>
                    <div class="balance">
                        <span>
                            Ваш баланс:<br> @User.Balance Баллов СР
                        </span>
                    </div>
                </div>
            </div>

            <div class="user-capabilities">
                <button class="top-up">
                    <NavLink style="text-decoration:none; color: white;" href="addFunds">
                        ПОПОЛНИТЬ!
                    </NavLink>
                </button>
                <button class="withdrawal">
                    <NavLink style="text-decoration:none; color: white;" href="takeFunds">
                        ВЫВЕСТИ
                    </NavLink>
                </button>
            </div>

            <div class="history-bids">
                <div class="history-bids-title">
                    @if (_formatUserBets is not null)
                    {
                        <MudGrid>
                            @foreach (var userBet in _formatUserBets.Take(4))
                            {
                                <MudItem xs="12">
                                    <MudPaper Elevation="3" Style="color:white; background-color: inherit;">
                                        @userBet.ViewEvent
                                        <br />
                                        @userBet.ViewBet
                                        <br />
                                        @userBet.ViewMoney
                                    </MudPaper>
                                </MudItem>
                            }
                        </MudGrid>

                        @if (_formatUserBets.Count() > 4)
                        {
                            <p style="text-align: center; margin-top: 20px">●●●</p>
                        }
}
                </div>
            </div>
        </div>
    </div>
}

