<UserControl x:Class="BaseSyle.BaseDatePickerTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BaseSyle"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <local:BaseTextBox BorderStyle="{StaticResource BorderStyleForTextBox}" Height="auto" BackText="Введите дату" LostFocus="text_LostFocus" GotFocus="text_GotFocus" x:Name="text"></local:BaseTextBox>
    </Grid>
</UserControl>
